{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["ESNext", "DOM"],
    "declaration": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "allowJs": true,
    "paths": {
      "@ui/*": ["../ui/*"],
      "@packages/*": ["../*"],
      "@docs/*": ["../docs/*"],
      "@root/*": ["../../*"],
      "react": ["./node_modules/@types/react"]
    },
    "types": [
      "unplugin-vue-define-options/macros-global",
      "@types/node",
      "@types/react"
    ],
    "outDir": "./dist",
    "allowSyntheticDefaultImports": true,
    "declarationDir": "types",
    "emitDeclarationOnly": true,
    "resolveJsonModule": true,
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "removeComments": true
  },
  "include": ["**/*"],
  "exclude": ["node_modules", "*.config", "dist", "tests"],
  "typeAcquisition": {
    "enable": true
  }
}
