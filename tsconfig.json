{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["ESNext", "DOM"],
    "declaration": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "allowJs": true,
    "paths": {
      "@ui/*": ["./packages/ui/*"],
      "@packages/*": ["./packages/*"],
      "@docs/*": ["./packages/docs/*"],
      "@root/*": ["./*"]
    },
    "types": ["unplugin-vue-define-options/macros-global", "@types/node"],
    "outDir": "./dist",
    "allowSyntheticDefaultImports": true,
    "declarationDir": "types",
    "emitDeclarationOnly": true,
    "resolveJsonModule": true,
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "removeComments": true
  },
  "include": ["**/*"],
  "exclude": ["node_modules", "*.config", "dist", "tests"],
  "typeAcquisition": {
    "enable": true
  }
}
